{
  "name": "gatsby-theme-patternfly-org-workspace",
  "private": true,
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "develop": "yarn develop:v4",
    "develop:v4": "yarn workspace patternfly-org-4 develop -p 8003",
    "build:v4": "yarn workspace patternfly-org-4 build",
    "build:prefix": "yarn workspace patternfly-org-4 build:prefix && yarn copy:v4",
    "copy:v4": "mkdir -p build/patternfly-org && cp -r packages/patternfly-4/public/ build/patternfly-org/v4 && cp -r build/patternfly-org/v4/assets build/patternfly-org/assets",
    "build:v3": "cd packages/patternfly-3 && yarn run build && cd ../.. && yarn copy:v3",
    "copy:v3": "mkdir -p build/patternfly-org && cp -r packages/patternfly-3/_site build/patternfly-org/v3",
    "clean": "lerna run clean && rm -rf build",
    "serve": "yarn workspace patternfly-org-4 serve -p 8003",
    "serve:prefix": "yarn workspace patternfly-org-4 serve -p 8003 --prefix-paths",
    "test:v4": "yarn workspace patternfly-org-4 test:a11y:ci",
    "start:pf3": "yarn workspace patternfly-org-3 develop",
    "start:pf4": "yarn develop:v4",
    "start": "yarn start:pf4",
    "uninstall": "find . -name node_modules | xargs rm -rf"
  },
  "workspaces": {
    "packages": [
      "packages/patternfly-3",
      "packages/patternfly-4",
      "packages/patternfly-4/gatsby-theme-patternfly-org",
      "packages/patternfly-4/gatsby-transformer-react-docgen-typescript"
    ]
  },
  "devDependencies": {
    "glob": "^7.1.6",
    "lerna": "^3.19.0"
  }
}
