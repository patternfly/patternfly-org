{
  "name": "gatsby-theme-patternfly-org-workspace",
  "private": true,
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "develop:next": "yarn workspace @patternfly/patternfly gatsby develop -p 8001",
    "build:next": "yarn workspace @patternfly/patternfly build:site",
    "clean:next": "yarn workspace @patternfly/patternfly clean",
    "serve:next": "yarn workspace @patternfly/patternfly gatsby serve  -p 8001",
    "develop:react": "yarn workspace @patternfly/react-docs develop -p 8002",
    "build:react": "yarn workspace @patternfly/react-docs build:ram",
    "clean:react": "yarn workspace @patternfly/react-docs clean",
    "serve:react": "yarn workspace @patternfly/react-docs gatsby serve  -p 8002",
    "develop:org": "yarn workspace patternfly-org-4 develop -p 8003",
    "build:org": "yarn workspace patternfly-org-4 build",
    "build:org:prefix": "yarn workspace patternfly-org-4 build:prefix",
    "clean:org": "yarn workspace patternfly-org-4 clean",
    "serve:org": "yarn workspace patternfly-org-4 serve",
    "serve:org:prefix": "yarn workspace patternfly-org-4 serve:prefix",
    "test:org": "yarn workspace patternfly-org-4 test:a11y:ci",
    "start:pf3": "yarn workspace patternfly-org-3 develop",
    "start:pf4": "yarn develop:org"
  },
  "workspaces": {
    "packages": [
      "packages/patternfly-3",
      "packages/patternfly-4",
      "packages/patternfly-4/gatsby-theme-patternfly-org",
      "packages/patternfly-4/patternfly-next",
      "packages/patternfly-4/patternfly-react/packages/patternfly-4/react-docs",
      "packages/patternfly-4/patternfly-react/packages/patternfly-4/react-docs/plugins/**"
    ],
    "nohoist": [
      "**/@patternfly/patternfly"
    ]
  },
  "devDependencies": {
    "lerna": "^3.19.0"
  }
}
