{
    "compilerOptions": {
      "assumeChangesOnlyAffectDirectDependencies": true,
      "jsx": "react-jsx",
      "lib": [
        "es2015",
        "dom"
      ],
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "importHelpers": true,
      "composite": true,
      "sourceMap": true,
      "declarationMap": true,
      "strict": false,
      "strictNullChecks": false,
      "isolatedModules": true,
      "rootDir": "./",
      "outDir": "./",
      "baseUrl": ".",
    },
    "include": [
        "./*",
        "./**/*"
    ],
    "exclude": [
        "**/**.test.tsx",
        "**/**.test.ts",
        "**/examples/**",
        "**/__mocks__/**"
    ]
  }

